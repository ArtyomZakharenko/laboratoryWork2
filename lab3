#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <malloc.h>
#include <stdlib.h>
int main()
{
  int *array;
  int i, j, k, row, col, temp;
  printf("Enter row size: ");
  scanf("%d", &row);
  printf("Enter column size: ");
  scanf("%d", &col);
  array = (int*)calloc(row * col, sizeof(int));
  
      for (i = 0; i < col; i++){
          for(j = 0; j < row; j++){
            printf("array[%d][%d] = ", i,j);
            scanf("%d", array+i*col+j);
    }
  }
  
  for (i = 0; i < col; i++){
          for(j = 0; j < row; j++){
            printf("%5d", *(array+i*col+j));
    }
    printf("\n");
  }
  
  int rowStart = 0;
  int columnIndex = col;
  for (k = 0; k < col; k++){
      for(i = rowStart; i < columnIndex; i++){
          for(j = rowStart+1; j < columnIndex; j++){
              if(array[i] < array[j]){
                  temp = array[j];
                  array[j] = array[i];
                  array[i] = temp;
              }
          }
      }
      rowStart = rowStart + col;
      columnIndex = columnIndex + col;
    }
  
  printf("\n");
  for (i = 0; i < col; i++){
          for(j = 0; j < row; j++){
            printf("%5d", *(array+i*col+j));
    }
    printf("\n");
  }
  

  return 0;
}




